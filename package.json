{
  "name": "kauvery-video-consultation-platform",
  "version": "1.0.0",
  "description": "Complete video consultation platform for Kauvery Hospital with client and server",
  "private": true,
  "main": "server/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "heroku-postbuild": "cd client && npm install && npm run build",
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:test": "cd client && npm test",
    "server:start": "node server.js",
    "server:dev": "NODE_ENV=development node server.js",
    "server:prod": "NODE_ENV=production node server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:start\"",
    "dev:server": "nodemon server.js",
    "build": "npm run client:build",
    "start:prod": "npm run build && npm run server:prod",
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint:fix",
    "security-check": "npm audit && cd client && npm audit",
    "security-fix": "npm audit fix && cd client && npm audit fix",
    "clean": "rm -rf node_modules client/node_modules client/build",
    "clean:install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "video-consultation",
    "telemedicine",
    "healthcare",
    "zego",
    "react",
    "express",
    "security",
    "fullstack"
  ],
  "author": "Kauvery Hospital",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kauvery-hospital/video-consultation.git"
  },
  "bugs": {
    "url": "https://github.com/kauvery-hospital/video-consultation/issues"
  },
  "homepage": "https://kauveryhospital.com/video-consultation",
  "workspaces": [
    "client",
    "server"
  ]
} 